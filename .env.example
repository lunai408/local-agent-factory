# ===== Model Provider =====
MODEL_PROVIDER=local  # local (Ollama) or openai

# ===== OpenAI (if MODEL_PROVIDER=openai) =====
OPENAI_API_KEY=
OPENAI_MODEL_ID=gpt-5.2

# ===== SurrealDB =====
SURREALDB_USERNAME=root
SURREALDB_PASSWORD=root
SURREALDB_VERSION=v2
SURREALDB_PORT=8000
SURREALDB_NAMESPACE=local_agent_memory
SURREALDB_DATABASE=main_database

# ===== Ollama =====
# Host:port du daemon Ollama local (utilisé par les scripts)
OLLAMA_HOST=127.0.0.1:11434
# URL complète pour Docker (accès via host.docker.internal)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Modèles choisis par l'utilisateur
OLLAMA_INFER_MODEL=ministral-3:3b
OLLAMA_EMBED_MODEL=nomic-embed-text

# ===== Hugging Face =====
# Token pour télécharger des modèles gated (optionnel)
HF_API_TOKEN=

# ===== ComfyUI =====
# Preset recommandé: z_image_turbo
COMFY_PRESET=z_image_turbo

COMFY_VRAM_MODE=auto          # auto/lowvram/normalvram/highvram/novram/cpu
COMFY_ACCELERATOR=auto        # auto: MPS sur Mac (Apple Silicon), nvidia/cpu sur Linux

# Workspace (où comfy-cli va installer ComfyUI/)
# Par défaut: ./ComfyUI dans le projet
# COMFY_WORKSPACE=./ComfyUI

# ===== Z-Image-Turbo (URLs des modèles) =====
# Text encoder (Qwen 3 4B)
COMFY_ZIMAGE_TEXT_ENCODER_URL=https://huggingface.co/Comfy-Org/z_image_turbo/resolve/main/split_files/text_encoders/qwen_3_4b.safetensors

# Diffusion model / UNet
COMFY_ZIMAGE_DIFFUSION_URL=https://huggingface.co/Comfy-Org/z_image_turbo/resolve/main/split_files/diffusion_models/z_image_turbo_bf16.safetensors

# VAE
COMFY_ZIMAGE_VAE_URL=https://huggingface.co/Comfy-Org/z_image_turbo/resolve/main/split_files/vae/ae.safetensors

# (Optionnel) LoRA - sera téléchargé si l'URL est définie
# COMFY_LORA_URL=https://huggingface.co/tarn59/pixel_art_style_lora_z_image_turbo/resolve/main/pixel_art_style_z_image_turbo.safetensors

# ===== Service Ports (Docker) =====
BACKEND_PORT=7777
AGENT_UI_PORT=3000
MCP_PDF_PORT=3001
MCP_COMFY_PORT=3002
MCP_CHART_PORT=3003

# ===== MCP Server URLs (Local Development) =====
# These are used when running backend locally (not in Docker)
# Docker-compose overrides these with container names (mcp-pdf, mcp-chart, mcp-comfy)
MCP_PDF_URL=http://localhost:3001
MCP_CHART_URL=http://localhost:3003
MCP_COMFY_URL=http://localhost:3002
