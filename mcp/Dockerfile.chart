# Chart Generator MCP Dockerfile
# Uses matplotlib and seaborn for chart generation

# ===== Builder stage =====
FROM python:3.13-slim AS builder

COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv
WORKDIR /app

COPY pyproject.toml uv.lock README.md ./
RUN uv sync --frozen --no-dev

# ===== Runtime stage =====
FROM python:3.13-slim

# Install curl for healthcheck
RUN apt-get update && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder /app/.venv /app/.venv

# Copy application code
COPY chart_generator/ ./chart_generator/
COPY shared/ ./shared/

# Environment setup
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app"
ENV PYTHONUNBUFFERED=1
ENV CHARTS_DIR="/data/charts"
ENV MPLBACKEND="Agg"

# Create data directory
RUN mkdir -p /data/charts

EXPOSE 3003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:3003/health || exit 1

CMD ["python", "-m", "chart_generator.server", "--transport", "streamable-http", "--host", "0.0.0.0", "--port", "3003"]
